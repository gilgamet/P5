{%  extends "base.html.twig" %}

{% block title portfolio.title %}

{% block body %}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8">
            {% if portfolio.filename %}
                <img src="{{ vich_uploader_asset(portfolio, 'imageFile')| imagine_filter('med') }}" alt="card-img-top" style="width: 100%; height: auto;"   >
            {% endif %}
        </div>
        <div class="col-md-4">
            <h1>{{  portfolio.title }}</h1>
            <h2>{{ portfolio.language }}</h2>
            <h3>{{ portfolio.description }}</h3>
            <h4>{{ portfolio.cahierdescharges }}</h4>
            <a href="{{ portfolio.url }}" class="btn btn-primary" target="_blank">Se rendre sur le site</a>
        </div>
    </div>
</div>

{% endblock %}



