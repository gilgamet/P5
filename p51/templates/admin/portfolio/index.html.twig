{% extends 'base.html.twig' %}

{% block title 'Géstion Backend des projets' %}

{% block body %}
    <div class="container mt-5">
        <h1>Géstion des projets</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Actions</th>
                </tr>
                <tbody>
                {% for portfolio in portfolios %}
                <tr>
                    <td>{{ portfolio.title }}
                    </td>
                    <td>
                        <a href="{{ path('admin.portfolio.edit', {id: portfolio.id}) }}" class="btn btn-warning">Editer</a>
                    </td>
                    <td>
                        <!--<a href="" class="btn btn-danger">Enregistrer un nouveau projet</a>-->
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </thead>
        </table>
    </div>


{% endblock %}